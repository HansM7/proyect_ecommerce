<body>


    <%- include('includes/header.ejs',{login, user}) %> 


  <!-- ========================= SECTION PAGETOP ========================= -->
  <section class="section-pagetop bg">
    <div class="container">
      <h2 class="title-page">Nuestra tienda</h2>

    </div> <!-- container //  -->
  </section>
  <!-- ========================= SECTION INTRO END// ========================= -->

  <!-- ========================= SECTION CONTENT ========================= -->
  <section class="section-content padding-y">
    <div class="container">

      <div class="row">
        <aside class="col-md-3">

          <div class="card">
            <article class="filter-group">
              <header class="card-header">
                <a href="#" data-toggle="collapse" data-target="#collapse_1" aria-expanded="true" class="">
                  <i class="icon-control fa fa-chevron-down"></i>
                  <h6 class="title">Categories</h6>
                </a>
              </header>
              <div class="filter-content collapse show" id="collapse_1">
                <div class="card-body">

                  <ul class="list-menu">
                    <li><a href="#">People </a></li>
                    <li><a href="#">Watches </a></li>
                    <li><a href="#">Cinema </a></li>
                    <li><a href="#">Clothes </a></li>
                    <li><a href="#">Home items </a></li>
                    <li><a href="#">Animals</a></li>
                    <li><a href="#">People </a></li>
                  </ul>

                </div> <!-- card-body.// -->
              </div>
            </article> <!-- filter-group  .// -->
           

          </div> <!-- card.// -->

        </aside> <!-- col.// -->
        <main class="col-md-9">

          <header class="border-bottom mb-4 pb-3">
            <div class="form-inline">
              <span class="mr-md-auto">32 Items found </span>

            </div>
          </header><!-- sect-heading -->

          <div class="row">
            
            <% for(let i=0 ; i < dataVerify.length;i++) { %>
              <div class="col-md-4">
                <figure class="card card-product-grid">
                  <div class="img-wrap">
                    <img src="<%= dataVerify[i].product.thumbnail %>">
  
                  </div> <!-- img-wrap.// -->
                  <figcaption class="info-wrap">
                    <div class="fix-height">
                      <a href="./product-detail.html" class="title"><%= dataVerify[i].product.title %></a>
                      <div class="price-wrap mt-2">
                        <span class="price">$<%= dataVerify[i].product.price %></span>
                      </div> <!-- price-wrap.// -->
                    </div>

                    <!-- Validacion de producto -->
                    
                    <% if (dataVerify[i].active_cart===true) { %>
                      <a href="/store" class="btn btn-block btn-success">Producto a√±adido</a>
                    <% }else{ %>
                      <a href="/add_cart/<%= dataVerify[i].product.id %>" class="btn btn-block btn-primary">Agregar al carro</a>
                    <%} %>
                    
                    
                    
                  </figcaption>
                </figure>
              </div> <!-- col.// -->
            
  
            <% } %> 

            
          </div> <!-- row end.// -->


          <!-- <nav class="mt-4" aria-label="Page navigation sample">
            <ul class="pagination">
