<header class="section-header">
    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 col-6">
                    <a href="/" class="brand-wrap">
                        TIENDA TECNOLOGICA
                    </a> <!-- brand-wrap.// -->
                </div>
                <div class="col-lg col-sm col-md col-6 flex-grow-0">
                    
                    <a href="/chat" class="btn btn-outline-primary">Escr√≠benos</a>
                </div> <!-- col.// -->
                <a href="/store" class="btn btn-outline-primary">Tienda</a>
                <div class="col-lg  col-md-6 col-sm-12 col">
                    <div  class="search" id="form_search">
                        <div class="input-group w-100">
                            <input type="text" class="form-control" style="width:60%;" placeholder="Search">

                            <div class="input-group-append">
                                <button class="btn btn-primary"  onclick="window.location.href='/error_meme'">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div> <!-- search-wrap .end// -->
                </div> <!-- col.// -->
                <div class="col-lg-3 col-sm-6 col-8 order-2 order-lg-3">
                    <div class="d-flex justify-content-end mb-3 mb-lg-0">
                        <div class="widget-header">
                            <% if(!login){ %>
                                <small class="title text-muted"> Bienvenido </small>
                                <div>
                                    <a href="/signin">Ingresar</a> <span class="dark-transp"> | </span>
                                    <a href="/register"> Registrarse</a>
                                </div>
                            <% }else{%>
                                <strong><h6 class="title text-muted fw-bold"> Bienvenido <%= user.name %>  </h6></strong>
                                <div>
                                    <strong></strong><a href="/logout" class="fw-bold text-danger"> Salir</a></strong>
                                </div>
                            <%} %> 

                            
                        </div>

                        <% if(login){ %>
                            <div class="icon-sm  rounded-circle border">
                                <img style="width: 100%; height:100%; border-radius: 50%;overflow: hidden;" src="/uploads/image<%= user.id %>.jpg" alt="">
                            
                            </div>
                            <a href="/cart" class="widget-header pl-3 ml-3">
                                <div class="icon icon-sm rounded-circle border"><i class="fa fa-shopping-cart"></i>
                                </div>
                                <span class="badge badge-pill badge-danger notify"><%= dataCart.length_products %> </span>
                            </a>
                        <% }else{%>
                            <a href="/cart" class="widget-header pl-3 ml-3">
                                <div class="icon icon-sm rounded-circle border"><i class="fa fa-shopping-cart"></i>
                                </div>
                                <span class="badge badge-pill badge-danger notify">0</span>
                            </a>
                        <%} %> 
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->
</header> <!-- section-header.// -->