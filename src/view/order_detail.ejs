<!DOCTYPE HTML>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="pragma" content="no-cache" />
  <meta http-equiv="cache-control" content="max-age=604800" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>Ecommerce</title>

  <link href="images/favicon.ico" rel="shortcut icon" type="image/x-icon">

  <!-- jQuery -->
  <script src="js/jquery-2.0.0.min.js" type="text/javascript"></script>

  <!-- Bootstrap4 files-->
  <script src="js/bootstrap.bundle.min.js" type="text/javascript"></script>
  <link href="css/bootstrap.css" rel="stylesheet" type="text/css" />

  <!-- Font awesome 5 -->
  <link href="fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

  <!-- custom style -->
  <link href="css/ui.css" rel="stylesheet" type="text/css" />
  <link href="css/responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)" />

  <!-- custom javascript -->
  <script src="js/script.js" type="text/javascript"></script>
  <script src="/my_script/script.js" type="text/javascript"></script>

  <script type="text/javascript">
    /// some script
  </script>

  <script src="my_script/script.js"></script>

</head>

<body>
    <%- include('includes/header.ejs',{login, user}) %> 
  <section class="section-content padding-y bg">
    <div class="container">
		<h4 class="card-title mb-4">Detalle de compra</h4>
		<div class="row">
			<aside class="col-lg-9 card p-3">

				<div class="row">
					<% for (let index = 0; index < dataCart.length_products; index++) {%>
						<div class="col-md-6">
							<figure class="itemside  mb-4">
								<div class="aside"><img src="<%= dataCart.cart.products[index].thumbnail %>" class="border img-sm"></div>
								<figcaption class="info">
									<p><%= dataCart.cart.products[index].title %> </p>
									<span class="text-muted"><%= dataCart.cart.products[index].ammount %> x <%= dataCart.cart.products[index].price %> = $<%= dataCart.cart.products[index].price*dataCart.cart.products[index].ammount %> </span>
								</figcaption>
							</figure>
						</div>
						
					<%} %> 
				</div>
				

				
			</aside> <!-- col.// -->

			  <aside class="col-lg-3">

				<div class="card">
				  <div class="card-body">
					<dl class="dlist-align">
					  <dt>Precio total:</dt>
					  <dd class="text-right">$<%= ammount %></dd>
					</dl>
					<dl class="dlist-align">
					  <dt>Descuento:</dt>
					  <dd class="text-right"> $0</dd>
					</dl>
					<dl class="dlist-align">
					  <dt>Total:</dt>
					  <dd class="text-right text-dark b"><strong>$<%= ammount %></strong></dd>
					</dl>
					<hr>
					<p class="text-center mb-3">
					  <img src="	https://cdn-icons-png.flaticon.com/512/5442/5442020.png" height="50">
					</p>
					<a href="/checkout_order" class="btn btn-primary btn-block"> Aprobar compra </a>
					<a href="/store" class="btn btn-light btn-block">Continuar comprando</a>
				  </div> <!-- card-body.// -->
				</div> <!-- card.// -->
	  
			  </aside> <!-- col.// -->
		</div> 
      <!-- ============================ COMPONENT 1 END .// ================================= -->

    </div> <!-- container .//  -->
  </section>
  <!-- ========================= SECTION CONTENT END// ========================= -->
</body>

</html>